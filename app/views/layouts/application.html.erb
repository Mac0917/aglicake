<!DOCTYPE html>
<html>
  <head>
    <title>Aglicake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
        <div class="container">

      <header><h1></h1><h1></h1>
          <div class="container">
                <nav class="nav navbar-nav navbar-left">
                  <div style="padding: 10px; margin-bottom: 10px; border: 5px solid #333333; border-radius: 10px; background-color: #ffa070; color: #ffffff;">
                  <h1><strong>LOGO</strong></h1>
                  </div>
                </nav>
                <nav>
                  <ul class="nav navbar-nav navbar-right">
                      <% if admin_signed_in? %>
                        <li><%= link_to "商品一覧", admins_items_path, class: 'glyphicon glyphicon-home home' %></li>
                        <li><%= link_to " 会員一覧 ", admins_members_path, class: 'glyphicon glyphicon-home home' %></li>
                        <li><%= link_to "注文履歴一覧", admins_orders_path, class: 'glyphicon glyphicon-user users' %></li>
                        <li><%= link_to "ジャンル一覧", admins_genres_path, class: 'glyphicon glyphicon-book books' %></li>
                        <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
                      <% elsif member_signed_in? %>
                        <li><%= link_to 'マイページ', member_path(current_member.id), class: 'glyphicon glyphicon-link about' %></li>
                        <li><%= link_to '商品一覧', items_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
                        <li><%= link_to 'カート', carts_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
                        <li><%= link_to "ログアウト", destroy_member_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
                      <% else %>
                        <li><%= link_to ' 商品一覧', items_path, class: 'glyphicon glyphicon-link about' %></li>
                        <li><%= link_to ' 新規登録', new_member_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
                        <li><%= link_to ' ログイン', new_member_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
                      <% end %>
                  </ul>
                </nav>


        </div>
    </header>
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <%end%>
          <% if alert %>
      <p><%= alert %></p>
          <%end%>
      <%= yield %>
</body>
</html>
