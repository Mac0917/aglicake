<% if item.errors.any? %>
    <div class="alert">
      <h2><%= pluralize(item.errors.count, "件") %>のエラーにより商品情報を保存できませんでした。</h2>
      <ul class="error" type="disc">
        <% item.errors.full_messages.each do |message| %>
          <li class="error_message"><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>