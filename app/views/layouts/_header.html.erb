<header>
    <div class="container">
        
        <div class="flash_message">
            <% if flash[:notice] %>
                <p><%= flash[:notice] %></p>
            <%end%>
            <% if alert %>
                <p><%= alert %></p>
            <%end%>
        </div>
        <div class="select_icon">
            <ul>
                <% if admin_signed_in? %>
                    <li class="special_icon"><%= link_to "商品一覧", admins_items_path, class: 'glyphicon glyphicon-home home' %></li>
                    <li class="special_icon"><%= link_to " 会員一覧 ", admins_members_path, class: 'glyphicon glyphicon-home home' %></li>
                    <li class="special_icon"><%= link_to "注文履歴一覧", admins_orders_path, class: 'glyphicon glyphicon-user users' %></li>
                    <li class="special_icon"><%= link_to "ジャンル一覧", admins_genres_path, class: 'glyphicon glyphicon-book books' %></li>
                    <li class="special_icon"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
                <% elsif member_signed_in? %>
                    <li class="special_icon"><%= link_to 'マイページ', member_path(current_member.id), class: 'glyphicon glyphicon-link about' %></li>
                    <li class="special_icon"><%= link_to '商品一覧', items_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
                    <li class="special_icon"><%= link_to 'カート', carts_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
                    <li class="special_icon"><%= link_to "ログアウト", destroy_member_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
                <% else %>
                    <li class="special_icon"><%= link_to ' 商品一覧', items_path, class: 'glyphicon glyphicon-link about' %></li>
                    <li class="special_icon"><%= link_to ' 新規登録', new_member_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
                    <li class="special_icon"><%= link_to ' ログイン', new_member_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
                <% end %>
            </ul>
        </div>
    <div>
</header>