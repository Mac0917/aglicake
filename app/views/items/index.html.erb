<div class='container'>


<div class='col-md-6 col-md-offset-3'>

<h2>ジャンル検索</h2>
<% @genres.each do |a| %>

<%= link_to a.name , items_path(genre_id: a.id) %>
<% end %>

<h1><%= @genres.name %>一覧</h1>
      <table>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
           <th>ジャンル</th>
          <th>ステータス</th>
        </tr>

        <% @items.each do |item| %>

          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, item_path(item.id) %></td>
            <td><%= item.excluded %>円</td>



            <td><%= item.genre.name %></td>

            <td><%= item.status %></td>
          </tr>
        <% end %>


</table>
</div>
</div>

<%= paginate(@items) %>