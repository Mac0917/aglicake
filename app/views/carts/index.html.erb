<div class='container'>


<div class='col-md-6 col-md-offset-3'>

<h1>カート商品一覧</h1>

      <table>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <% price_all = 0 %>
        <%  @carts.each do |cart| %>

          <tr>
            <td><%= cart.item.name %></td>
            <td><%= (BigDecimal(cart.item.excluded) * BigDecimal("1.1")).floor %></td>
         <%= form_for(cart) do |f| %>
            <td>
            <div>

            <%= f.number_field :quantity %>円
            <%= f.submit '更新' %>
        </div>
      </td>
      <td><%= link_to '削除',  cart_path(cart), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>

       <% end %>
       <td>
          <%= syoukei = cart.quantity * (BigDecimal(cart.item.excluded) * BigDecimal("1.1")).floor %>
         </td>
           </tr>
         <% price_all = price_all + syoukei %>
        <% end %>
     <%= price_all %>

</table>
</div>
</div>

