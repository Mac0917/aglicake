<div class='container'>


<div class='col-md-6 col-md-offset-3'>

<h1>ショッピングカート!</h1>
<%= link_to 'カートを空にする',  carts_destroy_all_path,class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当にカートを空にしますか？" %>

  <table>
      <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
      </tr>
          <% price_all = 0 %>
          <%  @carts.each do |cart| %>

      <tr>
          <td><%= cart.item.name %></td>
          <td><%= (BigDecimal(cart.item.excluded) * BigDecimal("1.1")).floor %></td>
          <%= form_for(cart) do |f| %>
          <td>
            <div>

             <%= f.number_field :quantity %>円
             <%= f.submit '更新' %>
           </div>
         </td>
         <td><%= link_to '削除',  cart_path(cart),class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>


           <% end %>
         <td>
          <%= syoukei = cart.quantity * (BigDecimal(cart.item.excluded) * BigDecimal("1.1")).floor %>
         </td>
         <% price_all = price_all + syoukei %>
       </tr>
          <% end %>
      <tr>
       <th>合計金額</th>
       <td><%= price_all %>円</td>
       <td><%= link_to '買い物を続ける',  items_path,class:"btn-sm btn-danger" %></td>

     </tr>
     <tr>
      <td><%= link_to '情報入力に進む',  new_order_path,class:"btn-sm btn-danger" %></td></td>
     </tr>
  </table>
</div>
</div>

