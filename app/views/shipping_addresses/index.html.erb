<h1> 配送先登録/一覧 </h1>
<%= render "layouts/error_messages", member: @shipping %>
<%= form_for @shipping do |f| %>
    <div>
      <%= f.label :郵便番号 %><br>
      <%= f.text_field :post_number, size:"40:20" %>
    </div>
    <div>
      <%= f.label :住所 %><br>
      <%= f.text_area :delively_address, size:"40:20" %>
    </div>
    <div>
      <%= f.label :宛名 %><br>
      <%= f.text_area :delively_name, size:"40:20" %>
    </div>
    <div>
      <%= f.submit "登録する", class: "btn btn-primary" %>
    </div>
<% end %>
<table class="table">
	<thead>
		<tr>
			<th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
		</tr>
	</thead>
		<tbody>
			<% @member.shipping_addresses.each do |shipping| %>
			    <tr>
					<td><%= shipping.post_number %></td>
					<td><%= shipping.delively_address %></td>
                    <td><%= shipping.delively_name %></td>
                    <td><%= link_to "Edit", edit_shipping_address_path(shipping.id), class: "btn btn-success Edit_btn" %><%= link_to "Destroy", shipping_address_path(shipping.id), class: "btn btn-danger Destroy_btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
</table>


