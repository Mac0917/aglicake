<div class="back">
  <%= render "layouts/header" %>
  <div class="container">

    <h1 class="shipping"> 配送先登録/一覧 </h1>
    <%= render "layouts/error_shipping", member: @shipping %>
    <%= form_for @shipping do |f| %>
        <table class="regstration">
          <tbody>
            <tr>
              <th width="200" height="50"><%= f.label :郵便番号 %>(ハイフンなし)</th>
              <td><%= f.text_field :post_number, class: "form-control" %></td>
            </tr>
            <tr>
              <th height="50"><%= f.label :住所 %></th>
              <td><%= f.text_field :delively_address, size:"40", class: "form-control" %></td>
            </tr>
            <tr>
              <th height="50"><%= f.label :宛名 %></th>
              <td><%= f.text_field :delively_name, class: "form-control"%></td>
              <td><%= f.submit "登録する", class: "btn btn-primary reg_btn" %></td>
            </tr>
          </tbody>
        </table>
    <% end %>
    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
        </tr>
      </thead>
      <tbody>
        <% @member.shipping_addresses.each do |shipping| %>
          <tr>
            <td><%= shipping.post_number %></td>
            <td><%= shipping.delively_address %></td>
            <td><%= shipping.delively_name %></td>
            <td><%= link_to "Edit", edit_shipping_address_path(shipping.id), class: "btn btn-success Edit_btn", style: 'color:#FFFFFF;' %><%= link_to "Destroy", shipping_address_path(shipping.id), class: "btn btn-danger Destroy_btn", style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


