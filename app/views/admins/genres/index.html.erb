<div class="back" >
<%= render "layouts/header" %>
<div class='container'>


<div class='col-md-6 col-md-offset-3'>

<h1>ジャンル一覧・追加</h1>

<%= form_for :genre, url: admins_genres_path do |f| %>

<div class="field row">

    <%= f.label 'ジャンル' %>
    <%= f.text_field :name, class: "col-xs-12 genre_name" %>
    <div class="radio-inline">
    <%= f.radio_button :status, :有効, checked: "checked" %>
    <%= f.label :有効, class: "genre_status_label" %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button :status, :無効 %>
    <%= f.label :無効, class: "genre_status__label" %>
    <%= f.submit "追加" %>
  </div>
  </div>
  <% end %>

      <table>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
        </tr>

        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.status %></td>
            <td><%= link_to '編集する', edit_admins_genre_path(genre.id) %></td>
            <td><%= link_to '削除',  admins_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>

          </tr>
        <% end %>
</table>
</div>
</div>
