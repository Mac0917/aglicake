<%= render "layouts/header" %>


<div class='container'>


  <div class='col-md-6 col-md-offset-3'>

  <h1>ジャンル編集</h1>
  <!-- form_for部分 -->
  <%= form_for :genre, url: admins_genre_path(@genre), method: :patch do |f| %>

  <div class="field row">
    <div>

    </div>
      <label for="item_title">ジャンル名</label>
      <br>
      <%= f.text_field :name, class:"form-control" %>
      <div class="radio-inline">
    <%= f.radio_button :status, :有効, checked: "checked" %>
    <%= f.label :有効, class: "genre_status_label" %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button :status, :無効 %>
    <%= f.label :無効, class: "genre_status__label" %>
  </div>
      <%= f.submit  %>


  </div>
  </div>
</div>





  <% end %>



  </div>
  </div>
</div>