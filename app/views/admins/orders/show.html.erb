<h2>注文履歴詳細</h2><br />
<div class="col-5 ml-3">
  <table class="table table-hover">
    <tr>
      <th>購入者</th><br/>
      <td><%= @order.member.last_name %><%= @order.member.first_name %></td>
    </tr>
    <tr>
      <th>配送先</th><br/>
      <td><%= @order.delivery_address %></td>
    </tr>
    <tr>
      <th>支払方法</th><br/>
      <td><%= @order.payment_methods %></td>
    </tr>
    <tr>
      <th>注文ステータス</th><br/>
      <td>
        <%= form_with( local: true, url: admins_order_path(@order.id), method: :patch) do |f| %>
          <%= f.select :status, options_for_select(Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k ]}) %>
          <%= f.submit '[更新]', class: 'btn btn-primary' %>
        <% end %>
      </td>
    </tr>
  </table>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= (order_item.item.excluded * 1.1).floor %></td>
          <td><%= order_item.quantity %></td>
          <td><%= (order_item.item.excluded * order_item.quantity * 1.1).floor %></td>
          <td>
            <%= form_with( local: true, url: admins_order_item_path(order_item.id), method: :patch) do |f| %>
              <%= f.select :status, options_for_select(OrderItem.statuses.keys.map {|k| [I18n.t("enums.order_item.status.#{k}"), k ]}), :selected => options_for_select(OrderItem.statuses.keys.map {|k| [I18n.t("enums.order_item.status.#{k}"), k ]}) %>
              <%= f.submit '[更新]', class: 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table> 
    </div>


    <div class="col-md-4">
      <table class="table table-hover"><br />
        <tr>
          <th>商品合計</th>
          <td><%= "#{@item_total_sum}  円" %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= "#{@order.delivery_price}  円" %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= "#{@order.total_price }  円" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
