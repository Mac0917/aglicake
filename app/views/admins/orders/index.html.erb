<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.create_at %></td>
        <td><%= order.last_name %><%= order.first_name %></td>
        <td><%= order.quantity %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

