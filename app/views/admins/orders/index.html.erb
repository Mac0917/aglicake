<h2 class="my-3 ml-3">注文履歴一覧</h2>
<div class="col-5 ml-3">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= order.member.last_name %><%= order.member.first_name %></td> 
          <% order.order_items.each do |order_item| %>
              <% @item_total_sum += order_item.quantity %>
          <% end %>
          <td><%= @item_total_sum %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "#{order.member.last_name}さんの注文履歴詳細", admins_order_path(order.id) %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>

<%= paginate(@orders) %>
