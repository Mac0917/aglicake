<h1><%=@member.last_name%><%=@member.first_name%>さんの会員詳細</h1>
<table>
    <thead>
    </thead>
    <tbody>
        <tr>
            <th>顧客ID</th>
            <td><%=@member.id%> <%=@member.status%></td>
        </tr>
        <tr>
            <th>氏名</th>
            <td><%=@member.last_name%><%=@member.first_name%></td>
        </tr>
        <tr>
            <th>フリガナ</th>
            <td><%=@member.last_name_kana%><%=@member.first_name_kana%></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%=@member.post_number%></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%=@member.address%></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%=@member.phone_number%></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%=@member.email%></td>
        </tr>
    </tbody>
</table>
<%=link_to "編集する", edit_admins_member_path(@member.id)%>
