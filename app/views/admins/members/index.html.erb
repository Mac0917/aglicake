<div class="back">
<%= render 'layouts/header' %>


<div class="container">
<h2>会員一覧</h2>
<div class="col-md-12">
<table class="table table-hover">
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
	</thead>
	<tbody>
		<% @members.each do |member| %>
			<tr>
                <td><%=member.id%></td>
                <td>
                    <%= link_to admins_member_path(member.id), class: "link_new" do %>
                        <%=member.last_name%><%=member.first_name%>
                    <%end%>
                </td>
                <td><%=member.email%></td>
                <td><%=member.status%></td>
			</tr>
		<%end%>
	</tbody>
</table>
</div>
</div>
</div>