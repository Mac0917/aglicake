<body>
<div class="container">
<div class="row">
<div class="oreder-info"><h2>注文情報入力</h2></div>
<div class="linehight">
</div>

<%= form_for :@order, url: new_order_path do |f| %>
<div class="payment">
<%= f.radio_button :payment_methods, '1' %>
<%= f.label :payment_methods, 'クレジットカード', value: 1 %><br>
<div class="linehight"><br>
</div>
<%= f.radio_button :payment_methods, '0' %>
<%= f.label :payment_methods, '銀行振込', value: 0 %>

  </div>

<%= hidden_field_tag :payment_methods, @order.payment_methods %>


<div class="delivery_address">
<h2>お届け先</h2>
  <div class="address_field">
  <%= f.radio_button :delivery_address, '2' %>
  <%= f.label :delivery_address, 'ご自身の住所', value: 2 %><br>
  <%=current_member.post_number%>　<%=current_member.address%><br>
  <%=current_member.last_name%>　<%=current_member.first_name%>
  </div>

<div class="linehight">
</div>

  <div class="address_field"><br>
  <%= f.radio_button :delivery_address, '3' %>
  <%= f.label :delivery_address, '登録済住所から選択', value: 3 %><br>
   <%= f.collection_select(:delivery_address, current_member.shipping_addresses, :id, :view_name) %><br>
  </div><br>

  <div class="address_field"><br>
   <div class="errorsbar">
        <% if @order.errors.any? %>
          <h2><%= @order.errors.count %><strong>errors prohibited this order from being saved:</strong></h2>
          <%= @order.errors.full_messages.each do |msg|%><br>
            <%= msg %>
          <% end %>
        <% end %>
        </div>
  <%= f.radio_button :delivery_address, '4' %>
  <%= f.label :delivery_address, '新しいお届け先', value: 4 %>
  <br>
      <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :post_number, autofocus: true, class: "delivery_address", size:"40:20" %><br>

      <%= f.label :住所 %><br />
    <%= f.text_field :delivery_address, autofocus: true, class: "delivery_address", size:"40:20" %><br>

      <%= f.label :宛名 %><br />
    <%= f.text_field :delivery_name, autofocus: true, class: "delivery_name", size:"40:20" %><br>
    </div>

<div class="linehight"><br>
</div>
  <%= f.submit '確定画面に進む',class: "btn btn-primary "%>
  
<% end %>

<% link_to '確認画面に進む',orders_purchase_path,class:"btn btn-primary" %>
</div>


</div>
</div>
</div>

<body>