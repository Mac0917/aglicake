<div class="back">
  <%= render "layouts/header" %>
  <div class="send_mail">
    <h1>パスワード再設定</h1>
    <%= render "layouts/error_mail", member: resource %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.label :email, class: "email_tag" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", size:"20" %>
      <%= f.submit "メールを送る", class: "btn btn-info" %>
    <% end %>
  </div>
</div>
