<div class = "back" >
  <%= render "layouts/header" %>
  <div class="container">

  <h2>会員の方はこちらからログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table>
      <thead>
      </thead>
      <tbody>
        <tr>
          <th width="150" height="60"><%= f.label :email %></th>
          <td><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", size: "40" %><td>
        </tr>
        <tr>
          <th><%= f.label :password %></th>
          <td><%= f.password_field :password, class: "form-control", autocomplete: "current-password", size: "40" %></td>
        </tr>
      </tbody>
    </table>
    <p class="pass"><%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "link_new" %></p>
    <%= f.submit "ログイン", class: "btn btn-primary log_in_btn" %></p>
  <% end %>
  <h2>登録がお済みで無い方</h2>
  <p class="just3"><%= link_to "こちら", new_registration_path(resource_name), class: "link_new" %>から新規登録を行ってください</p>
  
  </div>
</div>
