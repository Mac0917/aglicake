<div class="back">
<%= render 'layouts/header' %>

<div class="container">
    <h2>マイページ</h2> <br />
    <div class="row-4">
        <div class="col-md-2">
            <h3>登録情報</h3>
        </div>

        
        <div class="col-md-1">
            <h3><%= link_to "編集する", edit_member_path(@member.id), class: 'btn btn-primary btn-sm', style: 'color:#FFFFFF;' %></h3>
        </div>
        <div class="col-md-1">
            <h3><%= link_to "パスワードを変更する", edit_member_registration_path, class: 'btn btn-primary btn-sm', style: 'color:#FFFFFF;' %></h3>
        </div>
    </div>
</div>

<div class="container">
        <div class="col-md-8">
    <table class="table table-bordered">
    <thead>
    </thead>
    <tbody>
        <tr>
            <th>氏名</th>
            <td><%= @member.last_name %> <%= @member.first_name %></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= @member.last_name_kana %> <%= @member.first_name_kana %> </td>
        <tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @member.email %>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= @member.post_number %></td>
        <tr>
        <tr>
            <th>住所</th>
            <td><%= @member.address %>
        <tr>
        <tr>
            <th>電話番号</th>
            <td><%= @member.phone_number %>
        </tr>
        <tr>
            <th>会員ステータス</th>
            <td><%=@member.status%></td>
        <tr>
    </tbody>
        </table>
        </div>
</div>



<div class="container">
    <div class="row-4">
        <div class="col-md-2">
            <h3>配送先</h3>
        </div>
        <div class="col-md-1">
            <h3><%= link_to "一覧を見る", shipping_addresses_path, class: 'btn btn-primary btn-sm', style: 'color:#FFFFFF;' %></h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row-4">
        <div class="col-md-2">
            <h3>注文履歴</h3>
        </div>
        <div class="col-md-1">
            <h3><%= link_to "一覧を見る", orders_path, class: 'btn btn-primary btn-sm', style: 'color:#FFFFFF;' %></h3>
        </div>
    </div>
</div>
